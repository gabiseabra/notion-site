{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ESNext",
    "lib": ["ES2020", "DOM"],
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "composite": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "@dto/*": ["dto/src/*"],
      "@api/*": ["api/src/*"],
      "@frontend/*": ["frontend/src/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}