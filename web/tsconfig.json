{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "ES2019",
    "module": "NodeNext",
    "rootDir": "src",
    "moduleResolution": "NodeNext",
    "types": [
      "vite/client"
    ],
    "noEmit": true,
    "paths": {
      "@notion-site/dto/*": [
        "../dto/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "vite.config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}