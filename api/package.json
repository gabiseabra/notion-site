    "rss": "^1.2.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/morgan": "^1.9.10",
    "@types/rss": "^0.0.32",
    "nodemon": "^3.0.1"
  }
